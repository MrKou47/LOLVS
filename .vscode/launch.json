{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch",
      "sourceMaps": true,
      "stopOnEntry": true,
      "console": "internalConsole",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/src/server/index.ts",
      "outFiles": [
        "${workspaceRoot}/dist/*.js"
      ]
    },
    {
      "name": "Current TS File",
      "type": "node",
      "request": "launch",
      "args": [
        "${relativeFile}"
      ],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register"
      ],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Process",
      "port": 5858,
      "outFiles": []
    }
  ]
}